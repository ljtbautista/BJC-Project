@{
    ViewBag.Title = "Interactive Game";
}

<head>
    <link href="~/Content/BigIdeas/Programming/InteractiveGame/InteractiveGame.css" rel="stylesheet" />
</head>

<div class="container body-content">
    <div class="row">
        <div class="col-md-12"><h3>Kevin the Cloud and Friends</h3><p>CSS Animations</p></div>
    </div>
    <div class="row">
        @*code*@
        <div class="col-md-6">

@*Text editor*@
<div id="editor">
/*Make Kevin and his friends bigger by a factor
of 1.5 when hovered*/
#cloud {
    width: 200px;
    transition: all 0.4s ease;
}
/*add code below*/
#cloud:hover {

}
</div>

        </div>
        @*clouds and friends*@
        <div class="col-md-6">
            <div id="codeAnimation">
                @*for level 1*@
                <img id="cloud1" class="cloud" src="~/Content/BigIdeas/Programming/InteractiveGame/cloud and buns.png" />
                @*for level 2*@
                <img id="cloud2" class="cloud" style="display:none" src="~/Content/BigIdeas/Programming/InteractiveGame/cloud and buns.png" />
            </div>
        </div>
    </div>
    <div class="row" style="padding-top: 15px; padding-right: 4px">
        <div class="col-md-2">
            <button id="run" class="btn btn-success">Run</button>
            <button id="clear" class="btn btn-secondary">Clear</button>
        </div>
        <div class="col-md-9">
            <div id="woohoo" class="alert alert-success" role="alert" style="display:none;">
                Nice job! Hover over the cloud to see it in action!
            </div>
            <div id="tryagain" class="alert alert-danger" role="alert" style="display:none;">
                Opps, something is wrong with your code. Try again!
            </div>
        </div>
        <div class="col-md-1">
            <button id="next" class="btn btn-primary" style="display:none">Next</button>
            <button type="button" id="done" class="btn btn-primary" style="display:none"
                    data-toggle="modal" data-target="#badgeModal">
                Done
            </button>
        </div>
    </div>
</div>

<!-- Badge Modal -->
<div class="modal fade" id="badgeModal" tabindex="-1" role="dialog" aria-labelledby="badgeModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 style="padding-left: 145px;">Congratulations!</h4>
                <img src="~/Content/BigIdeas/Programming/InteractiveGame/Badge.PNG" style="width: 130px; margin-left: 170px"/>
                <h5 style="padding-left: 80px">Have a badge for your hard work!</h5>
            </div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/ace/1.3.3/ace.js" type="text/javascript" charset="utf-8"></script>
<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/gh/mathusummut/confetti.js/confetti.min.js"></script>
<script src="~/Content/BigIdeas/Programming/InteractiveGame/InteractiveGame.js"></script>